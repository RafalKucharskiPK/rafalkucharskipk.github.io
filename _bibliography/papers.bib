@article{akman2025impact,
title={Impact of collective behaviors of autonomous vehicles on urban traffic dynamics: A multi-agent reinforcement learning approach},
author={Akman, Ahmet Onur and Psarou, Anastasia and Varga, Zolt{\'a}n Gy{\"o}rgy and Jamr{\'o}z, Grzegorz and Kucharski, Rafa{\l}},
