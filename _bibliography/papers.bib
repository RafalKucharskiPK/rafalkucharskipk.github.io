@article{creutzig2024shared,
title={Shared pooled mobility: expert review from nine disciplines and implications for an emerging transdisciplinary research agenda},
author={Creutzig, Felix and Schmaus, Alexander and Ayaragarnchanakul, Eva and Becker, Sophia and Falchetta, Giacomo and Hu, Jiawei and Goletz, Mirko and Gu{\'e}ret, Adeline and Nagel, Kai and Schild, Jonas and others},
journal={Environmental Research Letters},
